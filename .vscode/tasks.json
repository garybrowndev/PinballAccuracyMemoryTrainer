{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "npm",
      "script": "install",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "type": "npm",
      "script": "dev",
      "label": "npm: dev",
      "detail": "vite",
      "isBackground": true,
      "dependsOn": ["Install Dependencies"],
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*ready in",
          "endsPattern": "(Local|Network):.*http://localhost:[0-9]+"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Stop npm dev server",
      "type": "shell",
      "command": "Stop-Process -Name node -Force -ErrorAction SilentlyContinue",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    }
  ]
}