{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "detail": "Installs all npm packages required for the project",
      "type": "shell",
      "command": "if (-not (Test-Path 'node_modules')) { npm install } else { Write-Host 'Dependencies already installed' }",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Lint",
      "detail": "Checks code for errors and style issues using ESLint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "dependsOn": ["Install Dependencies"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Run Unit Tests",
      "detail": "Runs Vitest unit tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:run"],
      "problemMatcher": [],
      "dependsOn": ["Lint"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Run E2E Tests",
      "detail": "Runs Playwright E2E tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:e2e"],
      "problemMatcher": [],
      "dependsOn": ["Run Unit Tests"],
      "dependsOrder": "sequence",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Run All Tests",
      "detail": "Runs both unit tests and E2E tests sequentially",
      "dependsOn": ["Run Unit Tests", "Run E2E Tests"],
      "dependsOrder": "sequence",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "label": "npm: dev",
      "detail": "Starts the Vite development server with hot reload",
      "isBackground": true,
      "dependsOn": ["Run All Tests"],
      "dependsOrder": "sequence",
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:.*http://localhost:5173"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "type": "npm",
      "script": "build:standalone",
      "label": "npm: build:standalone",
      "detail": "Builds a single self-contained HTML file with all assets embedded for offline use (includes lint and test checks)",
      "dependsOn": ["Install Dependencies"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Stop npm dev server",
      "detail": "Terminates all running Node.js processes for Vite dev server",
      "type": "shell",
      "command": "Get-CimInstance Win32_Process | Where-Object { $_.Name -eq 'node.exe' -and ($_.CommandLine -like '*vite*' -or $_.CommandLine -like '*npm*dev*') } | ForEach-Object { Stop-Process -Id $_.ProcessId -Force -ErrorAction SilentlyContinue }",
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    }
  ]
}