{
  "name": "pinball-trainer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.4.15",
    "workbox-build": {
      "source-map": "0.7.4"
    },
    "chrome-launcher": "^1.2.1",
    "tmp": "^0.2.4",
    "lighthouse": "^13.0.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "last 2 versions",
    "Firefox ESR"
  ],
  "scripts": {
    "postinstall": "node scripts/patch-chrome-launcher.cjs && npx --yes playwright install --with-deps",
    "dev": "vite --config config/vite.config.js",
    "prebuild": "node config/generate-sitemap.js",
    "build": "vite build --config config/vite.config.js",
    "build:standalone": "node config/build-standalone-complete.js",
    "analyze": "vite build --config config/vite.config.js && start dist/stats.html",
    "lint": "eslint . --config config/eslint.config.js --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "sitemap": "node config/generate-sitemap.js",
    "test": "vitest --config config/vite.config.js",
    "test:ui": "vitest --ui --config config/vite.config.js",
    "test:run": "vitest run --config config/vite.config.js",
    "test:a11y": "vitest run --config config/vite.config.js tests/vitest/a11y",
    "test:coverage": "vitest run --coverage --config config/vite.config.js",
    "test:coverage:ui": "vitest --ui --coverage --config config/vite.config.js",
    "test:e2e": "playwright test --config config/playwright.config.js",
    "test:e2e:a11y": "playwright test --config config/playwright.config.js tests/e2e/accessibility.spec.js",
    "test:e2e:visual": "playwright test --config config/playwright.config.js tests/e2e/visual-regression.spec.js",
    "test:e2e:visual:update": "playwright test --config config/playwright.config.js tests/e2e/visual-regression.spec.js --update-snapshots",
    "test:e2e:ui": "playwright test --ui --config config/playwright.config.js",
    "test:e2e:headed": "playwright test --headed --config config/playwright.config.js",
    "test:e2e:debug": "playwright test --debug --config config/playwright.config.js",
    "lhci:mobile": "npx lhci collect --config=config/lighthouse/mobile.config.cjs",
    "lhci:desktop": "npx lhci collect --config=config/lighthouse/desktop.config.cjs",
    "prepare": "husky"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.15",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "fast-check": "^4.5.3",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.13",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15"
  }
}
