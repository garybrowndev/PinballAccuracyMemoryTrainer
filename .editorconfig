# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, JSX, JSON, CSS files
[*.{js,jsx,json,css}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# Markdown files - preserve trailing whitespace (used for line breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Windows batch/PowerShell scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Package.json - maintain 2-space indentation
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[{*.config.js,vite.config.js,eslint.config.js}]
indent_style = space
indent_size = 2
